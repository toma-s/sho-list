<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.sholist">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/sho_list_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/sho_list_icon_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.MainListActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.MainListSetupActivity"
                android:theme="@style/AppTheme"/>
        <activity android:name=".activity.ShoListActivity"
                  android:theme="@style/AppTheme"/>
        <activity android:name=".activity.ShoListAddActivity"
                  android:theme="@style/AppTheme"/>
    </application>

</manifest>